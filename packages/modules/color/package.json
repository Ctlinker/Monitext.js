{
	"name": "@monitext/color",
	"version": "0.0.0",
	"description": "A lightweight library for text coloring, highlighting, and formatting in the console. Works with Node.js, Deno, Bun, and browsers.",
	"exports": {
		".": {
			"types": "./dist/main.d.ts",
			"import": "./dist/lib.min.bundle.noext.mjs",
			"require": "./dist/lib.min.bundle.noext.cjs"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "pnpm run typecheck && pnpm run test && pnpm run bundle",
		"bundle": "pnpm dlx tsx build.ts",
		"typecheck": "pnpm --package=typescript dlx tsc --noEmit -p ./tsconfig.build.json",
		"test": "pnpm dlx vitest run"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ctlinker/Monitext.js.git",
		"directory": "packages/modules/color"
	},
	"keywords": [
		"monitext",
		"color",
		"console-color",
		"text-formatting",
		"highlight",
		"ansi",
		"cli",
		"terminal",
		"string-format",
		"typescript",
		"javascript",
		"nodejs",
		"deno",
		"bun",
		"browser"
	],
	"author": "Ctlinker <linkeris404@gmali.com>",
	"license": "Apache-2.0",
	"packageManager": "pnpm@10.14.0",
	"files": [
		"dist",
		"LICENSE",
		"README.md",
		"THIRD_PARTY_LICENSES"
	],
	"devDependencies": {},
	"dependencies": {
		"chalk": "^5.6.0",
		"highlight.js": "^11.11.1",
		"html-parse-stringify": "^3.0.1"
	}
}
